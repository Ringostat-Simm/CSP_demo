extends layout

block styles
  link(rel='stylesheet', href='/stylesheets/error_page.css')
block content
  .container-scroller
    .container-fluid.page-body-wrapper.full-page-wrapper.auth-page
      .content-wrapper.d-flex.justify-content-center.align-items-center.text-center.error-page.bg-primary
        .row.flex-grow
          .col-lg-9.mx-auto.text-white
            .row.align-items-center.d-flex.flex-row
              .col-lg-6.text-lg-right.pr-lg-4
                h1.mb-0
                  = status
              .col-lg-6.error-page-divider.text-lg-left.pl-lg-4
                h2 Ошибка!
                h3.font-weight-light
                  = message
            .row.mt-5
              .col-12.text-center.mt-xl-2
                a.btn.btn-outline-light.btn-rounded(href='/')
                  i.fas.fa-home
                  =' '
                  | Вернуться на главную страницу
                a.btn.btn-outline-light.btn-rounded(href='javascript:history.back()')
                  i.fas.fa-undo-alt
                  =' '
                  | Вернуться на предыдущую страницу
            .row.mt-5
              .col-12.mt-xl-2
                p.text-white.font-weight-medium.text-center
                  = `Copyright © ${new Date().getFullYear()} `
                  a.text-white(href='mailto:k.peschanov@ringostat.com') Konstantin Peschanov
                  =' '
                  | All rights reserved.